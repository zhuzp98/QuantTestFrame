//@version=5
indicator("*A Candlestick Patterns", shorttitle = "Candle Patterns", overlay=true)

C_DownTrend = true
C_UpTrend = true
smaFastLength = input.int(50, title = "SMA Fast Length")
smaSlowLength = input.int(200, title = "SMA Slow Length")
perturbation = input.int(5, title="Perturbation of Accuracy (%)")
pert = perturbation / 100

var trendRule1 = "SMA Single"
var trendRule2 = "SMA Double"
var trendRule = input.string(trendRule1, "Detect Trend Based On", options=[trendRule1, trendRule2, "No detection"])

if trendRule == trendRule1
	priceAvg = ta.sma(close, smaFastLength)
	C_DownTrend := close < priceAvg
	C_UpTrend := close > priceAvg

if trendRule == trendRule2
	smaSlow = ta.sma(close, smaSlowLength)
	smaFast = ta.sma(close, smaFastLength)
	C_DownTrend := close < smaFast and smaFast < smaSlow
	C_UpTrend := close > smaFast and smaFast > smaSlow

C_Len = input.int(14, title = "EMA Depth for BodyAvg") // ta.ema depth for bodyAvg
C_ShadowPercent = 5.0 // size of shadows
C_ShadowEqualsPercent = 100.0
C_DojiBodyPercent = 5.0
C_Factor = 2.0 // shows the number of times the shadow dominates the candlestick body

// spot 箱体高点
C_BodyHi = math.max(close, open)
// spot 箱体低点
C_BodyLo = math.min(close, open)
// length 箱体高度
C_Body = C_BodyHi - C_BodyLo
// length 箱体平均高度
C_BodyAvg = ta.ema(C_Body, C_Len)
// boo 小箱体 多空力量相近
C_SmallBody = C_Body < C_BodyAvg
// boo 大箱体 多空力量差距较大
C_LongBody = C_Body > C_BodyAvg
// length 上影线长度
C_UpShadow = high - C_BodyHi
// length 下影线长度
C_DnShadow = C_BodyLo - low
// boo 有上影线
C_HasUpShadow = C_UpShadow > C_ShadowPercent / 100 * C_Body
// boo 有下影线
C_HasDnShadow = C_DnShadow > C_ShadowPercent / 100 * C_Body
// boo 阳线
C_WhiteBody = open < close
// boo 阴线
C_BlackBody = open > close
// length 涨跌区间
C_Range = high-low
// boo 在前箱体内
C_IsInsideBar = C_BodyHi[1] > C_BodyHi and C_BodyLo[1] < C_BodyLo
// spot 箱体中线
C_BodyMiddle = C_Body / 2 + C_BodyLo
// boo 上下影线相等
C_ShadowEquals = C_UpShadow == C_DnShadow or (math.abs(C_UpShadow - C_DnShadow) / C_DnShadow * 100) < C_ShadowEqualsPercent and (math.abs(C_DnShadow - C_UpShadow) / C_UpShadow * 100) < C_ShadowEqualsPercent
// boo 是十字线
C_IsDojiBody = C_Range > 0 and C_Body <= C_Range * C_DojiBodyPercent / 100
// boo 是等十字星
C_Doji = C_IsDojiBody and C_ShadowEquals

patternLabelPosLow = low - (ta.atr(30) * 0.6)
patternLabelPosHigh = high + (ta.atr(30) * 0.6)

